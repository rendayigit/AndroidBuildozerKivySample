{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build App",
      "type": "shell",
      "command": "buildozer init; buildozer -v android debug",
      "options": {
        "env": {
          "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
          "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Run App",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["main.py", "-m", "screen:one,portrait,scale=0.5"],
      "options": {
        "env": {
          "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
          "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64"
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Run Hot Reload",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["main.py", "-m", "screen:one,portrait,scale=0.5"],
      "options": {
        "env": {
          "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
          "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64",
          "DEBUG": "1" // required to enable Kaki's watcher
        }
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Install & Run on Phone (Logcat)",
      "type": "shell",
      // builds (if needed), installs, opens app, and shows logs
      "command": "buildozer android debug deploy run logcat",
      "options": {
        "env": {
          "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
          "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64"
        }
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
