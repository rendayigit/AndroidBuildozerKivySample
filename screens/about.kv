# About Screen - App information and credits

<AboutScreen>:
    name: 'about'

    canvas.before:
        Color:
            rgba: 0.06, 0.065, 0.09, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: '24dp', '60dp', '24dp', '24dp'
        spacing: '16dp'

        # App Icon with glow effect
        Widget:
            size_hint_y: None
            height: '90dp'
            canvas:
                Color:
                    rgba: 0.35, 0.55, 1.0, 0.1
                Ellipse:
                    pos: self.center_x - 45, self.center_y - 45
                    size: 90, 90
                Color:
                    rgba: 0.10, 0.11, 0.14, 1
                Ellipse:
                    pos: self.center_x - 36, self.center_y - 36
                    size: 72, 72
                Color:
                    rgba: 0.35, 0.55, 1.0, 0.8
                Line:
                    ellipse: self.center_x - 36, self.center_y - 36, 72, 72
                    width: 2
                Color:
                    rgba: 0.55, 0.85, 0.65, 1
                Line:
                    points: [self.center_x - 12, self.center_y + 10, self.center_x - 18, self.center_y, self.center_x - 12, self.center_y - 10]
                    width: 2.5
                    cap: 'round'
                    joint: 'round'
                Line:
                    points: [self.center_x + 12, self.center_y + 10, self.center_x + 18, self.center_y, self.center_x + 12, self.center_y - 10]
                    width: 2.5
                    cap: 'round'
                    joint: 'round'

        Label:
            text: "Kivy Demo"
            font_size: '28sp'
            bold: True
            size_hint_y: None
            height: '40dp'
            color: 0.95, 0.96, 0.98, 1

        Label:
            text: root.version
            font_size: '14sp'
            size_hint_y: None
            height: '24dp'
            color: 0.35, 0.55, 1.0, 1

        Widget:
            size_hint_y: None
            height: '8dp'

        # About Card with description
        BoxLayout:
            orientation: 'vertical'
            padding: '20dp'
            spacing: '8dp'
            size_hint_y: None
            height: '320dp'
            canvas.before:
                Color:
                    rgba: 0.10, 0.11, 0.14, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [16]
            
            Label:
                text: root.description
                font_size: '14sp'
                halign: 'center'
                valign: 'top'
                text_size: self.size
                color: 0.75, 0.77, 0.82, 1
                line_height: 1.5

        Widget:
            size_hint_y: 1

        # Footer
        Label:
            text: "Built with Python + Kivy"
            font_size: '12sp'
            size_hint_y: None
            height: '20dp'
            color: 0.4, 0.43, 0.5, 1
        
        Label:
            text: "Open Source"
            font_size: '11sp'
            size_hint_y: None
            height: '18dp'
            color: 0.35, 0.38, 0.45, 1

    BackButton:
        on_release: root.go_to('home', 'right')
