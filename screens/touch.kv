# Touch Demo Screen - Demonstrates touch/gesture interactions

<TouchScreen>:
    name: 'touch'

    canvas.before:
        Color:
            rgba: 0.08, 0.08, 0.12, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BackButton:
        on_release: root.go_to('home', 'right')

    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '15dp'

        ScreenTitle:
            text: "Touch Interaction"

        Label:
            size_hint_y: None
            height: '30dp'
            text: root.touch_info
            color: 0.3, 0.8, 1, 1
        
        # Touch Area
        FloatLayout:
            id: touch_area
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.2, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15]
                # Ripple effect
                Color:
                    rgba: 0.3, 0.7, 1, root.ripple_opacity
                Ellipse:
                    pos: root.touch_x - root.ripple_size/2, root.touch_y - root.ripple_size/2
                    size: root.ripple_size, root.ripple_size
                # Touch indicator
                Color:
                    rgba: 1, 0.4, 0.4, 0.8
                Ellipse:
                    pos: root.touch_x - 15, root.touch_y - 15
                    size: 30, 30

            on_touch_down:
                if self.collide_point(*args[1].pos): root.handle_touch(args[1].pos, self)

        BoxLayout:
            size_hint_y: None
            height: '50dp'
            spacing: '10dp'

            Button:
                text: f"Touches: {root.touch_count}"
                background_color: 0.3, 0.3, 0.4, 1

            Button:
                text: "Reset"
                background_color: 0.8, 0.3, 0.3, 1
                on_release: root.reset_touches()
