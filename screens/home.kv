# Home Screen - Main navigation hub

<HomeScreen>:
    name: 'home'

    canvas.before:
        # Deep navy gradient background
        Color:
            rgba: 0.06, 0.065, 0.09, 1
        Rectangle:
            pos: self.pos
            size: self.size
        # Subtle top gradient glow
        Color:
            rgba: 0.35, 0.55, 1.0, 0.03
        Rectangle:
            pos: self.x, self.y + self.height * 0.6
            size: self.width, self.height * 0.4

    BoxLayout:
        orientation: 'vertical'
        padding: '24dp', '40dp', '24dp', '24dp'
        spacing: '12dp'

        # App Logo / Icon area
        Image:
            source: 'assets/icons/logo_kivy_white.png'
            size_hint: None, None
            size: '70dp', '70dp'
            pos_hint: {'center_x': 0.5}

        Label:
            text: "Kivy Demo"
            font_size: '34sp'
            bold: True
            size_hint_y: None
            height: '50dp'
            color: 0.95, 0.96, 0.98, 1

        Label:
            text: "Modern Android App Template"
            font_size: '14sp'
            size_hint_y: None
            height: '24dp'
            color: 0.5, 0.53, 0.6, 1

        Widget:
            size_hint_y: None
            height: '28dp'

        NavButton:
            icon: 'assets/icons/animation.png'
            text: "Animations"
            on_release: root.go_to('animation')

        NavButton:
            icon: 'assets/icons/widgets.png'
            text: "Widgets"
            on_release: root.go_to('widgets')

        NavButton:
            icon: 'assets/icons/touch.png'
            text: "Touch & Gestures"
            on_release: root.go_to('touch')

        NavButton:
            icon: 'assets/icons/canvas.png'
            text: "Canvas Drawing"
            on_release: root.go_to('canvas')

        NavButton:
            icon: 'assets/icons/info.png'
            text: "About"
            on_release: root.go_to('about')

        Widget:
            size_hint_y: 1

        # Footer version indicator
        Label:
            text: "v1.0.0"
            font_size: '11sp'
            size_hint_y: None
            height: '20dp'
            color: 0.35, 0.38, 0.45, 1
